{
  "compileOnSave": true,
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node", "express"],
    "esModuleInterop": true,
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "DOM",
      "ES2015",
      "ES2015.core",
      "ES2017",
      "ES2020",
      "ScriptHost",
      "DOM.Iterable",
      "ES6",
      "ES2019",
      "ES2018"
    ],
  },
  "exclude": [
    "node_modules",
    "**/*.js"

  ]
}